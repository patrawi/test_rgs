---
import { Image } from 'astro:assets';
import heroBgImage from '../assets/images/hero_image.jpg';

const heroContent = {
	title: 'บริการรักษาความปลอดภัยและงานทำความสะอาดครบวงจร ระดับมืออาชีพ',
	subtitle: 'เราดูแลทั้งภายนอกและภายใน ด้วยมาตรฐานสากล (SOP, NSRS) ผสานเทคโนโลยีทันสมัย เพื่อความปลอดภัยสูงสุดของคุณ',
	ctaText: 'บริการของเรา',
	ctaLink: '#services',
	ctaSecondary: 'ขอใบเสนอราคาฟรี',
	ctaSecondaryLink: '#contact',
	license: 'ตภ.2600068',
	established: 'Established 2016'
};

const features = [
	{ label: 'ทุนจดทะเบียน', value: '5 ล้านบาท', suffix: ' ล้านบาท' },
	{ label: 'มาตรฐานสากล', value: 'NSRS', isText: true },
	{ label: 'ประสบการณ์', value: '8+ ปี', suffix: '+ ปี' },
	{ label: 'ความครอบคลุม', value: '24/7', isText: true }
];
---

<section class="relative min-h-screen flex items-center overflow-hidden">
	<!-- Background Gradient -->
	<div class="absolute inset-0 z-0 bg-gradient-to-br from-navy-950 via-navy-900 to-navy-950"></div>

	<!-- Background Image with Overlay -->
	<div class="absolute inset-0 z-0">
		<div class="absolute inset-0 overflow-hidden">
			<Image
				src={heroBgImage}
				alt="RGS Background"
				width={1920}
				height={1080}
				class="w-full h-full object-cover ken-burns-bg"
				format="webp"
			/>
		</div>
		<!-- Dark Overlay -->
		<div class="absolute inset-0 bg-navy-950/75"></div>
		<!-- Extra dark overlay behind text area for better readability -->
		<div class="absolute inset-0 bg-gradient-to-r from-navy-950/90 via-navy-950/40 to-transparent"></div>
	</div>

	<!-- Decorative Elements -->
	<div class="absolute inset-0 z-0 opacity-10">
		<div class="absolute top-20 right-10 w-72 h-72 bg-amber-400 rounded-full filter blur-3xl"></div>
		<div class="absolute bottom-20 left-10 w-96 h-96 bg-blue-900 rounded-full filter blur-3xl"></div>
	</div>

	<!-- Content -->
	<div class="relative z-10 container-custom pt-20">
		<!-- Badges Container -->
		<div class="stagger-fade-up" style="--delay: 0ms;">
			<!-- Badge -->
			<div class="inline-flex items-center gap-2 bg-navy-900/50 border border-amber-400/30 rounded-full px-4 py-2 mb-4 backdrop-blur-sm">
				<span class="w-2 h-2 bg-amber-400 rounded-full status-pulse"></span>
				<span class="text-amber-400 text-sm font-medium tracking-wide">24/7 บริการรักษาความปลอดภัยมืออาชีพ</span>
			</div>


		</div>

		<!-- Main Headline -->
		<h1 class="text-hero text-white mb-6 max-w-3xl stagger-fade-up" style="--delay: 200ms;">
			{heroContent.title}
		</h1>

		<!-- Sub-headline -->
		<p class="text-xl text-gray-300 max-w-2xl mb-10 leading-relaxed stagger-fade-up" style="--delay: 400ms;">
			{heroContent.subtitle}
		</p>

		<!-- Buttons -->
		<div class="flex flex-col sm:flex-row items-start gap-4 mb-16 stagger-fade-up" style="--delay: 600ms;">
			<a href={heroContent.ctaLink} class="btn-primary text-lg w-full sm:w-auto">
				{heroContent.ctaText}
			</a>
			<a href={heroContent.ctaSecondaryLink} class="btn-outline w-full sm:w-auto">
				{heroContent.ctaSecondary}
			</a>
		</div>

		<!-- Feature Highlights -->
		<div class="grid grid-cols-2 md:grid-cols-4 gap-8 max-w-3xl stagger-fade-up" style="--delay: 800ms;">
			{features.map((feature) => (
				<div class="text-center">
					<div class={`text-2xl md:text-3xl font-bold text-amber-400 mb-1 ${feature.isText ? '' : 'counter-number'}`}
						 data-suffix={feature.suffix || ''}>
						{feature.value}
					</div>
					<div class="text-gray-400 text-xs">{feature.label}</div>
				</div>
			))}
		</div>
	</div>

	<!-- Scroll Indicator -->
	<div class="absolute bottom-8 left-1/2 -translate-x-1/2 animate-bounce">
		<svg class="w-6 h-6 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
			<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"/>
		</svg>
	</div>
</section>

<style>
	/* Status Pulse Animation - gentler than animate-pulse */
	@keyframes statusPulse {
		0%, 100% {
			opacity: 1;
		}
		50% {
			opacity: 0.6;
		}
	}

	.status-pulse {
		animation: statusPulse 2s ease-in-out infinite;
	}

	/* Ken Burns Effect - Slow zoom on background */
	@keyframes kenBurns {
		0% {
			transform: scale(1);
		}
		100% {
			transform: scale(1.05);
		}
	}

	.ken-burns-bg {
		animation: kenBurns 10s ease-out forwards;
	}

	/* Staggered Fade-Up Animation */
	@keyframes fadeUp {
		from {
			opacity: 0;
			transform: translateY(30px);
		}
		to {
			opacity: 1;
			transform: translateY(0);
		}
	}

	.stagger-fade-up {
		opacity: 0;
		animation: fadeUp 0.8s ease-out forwards;
		animation-delay: calc(var(--delay, 0ms) / 1000);
	}
</style>

