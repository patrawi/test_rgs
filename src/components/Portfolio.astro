---
import { Image } from 'astro:assets';
import aomsinLogo from '../assets/images/aomsinLogo.jpg';

const portfolioItems = [
	{
		category: 'security',
		categoryLabel: 'รักษาความปลอดภัย',
		title: 'หมู่บ้านนาราสิริ สาทร',
		location: 'Narasiri Sathorn Village',
		image: aomsinLogo,
		tall: true
	},
	{
		category: 'cleaning',
		categoryLabel: 'ทำความสะอาด',
		title: 'การฝึกอบรมดับเพลิง',
		location: 'Fire Drill Training',
		image: aomsinLogo,
		tall: false
	},
	{
		category: 'security',
		categoryLabel: 'รักษาความปลอดภัย',
		title: 'กฟผ. การไฟฟ้าฝ่ายผลิต',
		location: 'EGAT Headquarters',
		image: aomsinLogo,
		tall: false
	},
	{
		category: 'cleaning',
		categoryLabel: 'ทำความสะอาด',
		title: 'Big Cleaning อาคารสำนักงาน',
		location: 'Office Building Cleaning',
		image: aomsinLogo,
		tall: true
	},
	{
		category: 'security',
		categoryLabel: 'รักษาความปลอดภัย',
		title: 'สำนักงานทรัพย์สินพระมหากษัตริย์',
		location: 'CPB Office',
		image: aomsinLogo,
		tall: false
	},
	{
		category: 'cleaning',
		categoryLabel: 'ทำความสะอาด',
		title: 'ดูแลรักษาพื้นที่ส่วนกลาง',
		location: 'Common Area Maintenance',
		image: aomsinLogo,
		tall: false
	},
	{
		category: 'security',
		categoryLabel: 'รักษาความปลอดภัย',
		title: 'ระบบ Easy Pass & CCTV',
		location: 'Smart Security System',
		image: aomsinLogo,
		tall: true
	},
	{
		category: 'cleaning',
		categoryLabel: 'ทำความสะอาด',
		title: 'โครงการพรีเมียมเพลส',
		location: 'Premium Place Project',
		image: aomsinLogo,
		tall: false
	},
	{
		category: 'security',
		categoryLabel: 'รักษาความปลอดภัย',
		title: 'การปฐมพยาบาลฉุกเฉิน',
		location: 'Emergency First Aid',
		image: aomsinLogo,
		tall: false
	}
];


---

<section id="portfolio" class="section-padding bg-white">
	<div class="container-custom">
		<!-- Section Header -->
		<div class="text-center mb-16">
			<p class="section-subtitle text-amber-600">ผลงานของเรา</p>
			<h2 class="section-title text-navy-950">ภาพการปฏิบัติงานจริง</h2>
			<p class="text-gray-600 max-w-2xl mx-auto mt-4">
				ภูมิใจนำเสนอภาพการทำงานจริงจากทีมงานมืออาชีพของเรา พร้อมมาตรฐานการบริการที่คุณไว้วางใจ
			</p>
		</div>

		<!-- Masonry Gallery -->
		<div class="columns-1 md:columns-2 lg:columns-3 gap-6 space-y-6 mb-20">
			{portfolioItems.map((item, index) => (
				<div key={`portfolio-${index}`} class={`break-inside-avoid group relative rounded-2xl overflow-hidden shadow-lg hover:shadow-2xl transition-all duration-300 ${item.tall ? 'row-span-2' : ''}`}>
					<!-- Image Container -->
					<div class={`relative ${item.tall ? 'h-[500px]' : 'h-[280px]'} overflow-hidden`}>
						<Image
							src={item.image}
							alt={item.title}
							width={600}
							height={item.tall ? 800 : 400}
							class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-110"
							format="webp"
						/>

						<!-- Category Badge (Top Right) -->
						<div class="absolute top-4 right-4">
							<span class={`inline-block px-3 py-1.5 text-xs font-semibold rounded-full shadow-lg ${
								item.category === 'security'
									? 'bg-navy-900 text-white'
									: 'bg-teal-500 text-white'
							}`}>
								{item.categoryLabel}
							</span>
						</div>

						<!-- Bottom Label Overlay -->
						<div class="absolute inset-x-0 bottom-0 bg-gradient-to-t from-navy-950/95 via-navy-950/80 to-transparent p-5">
							<h3 class="text-white font-bold text-lg mb-1 group-hover:text-amber-400 transition-colors">
								{item.title}
							</h3>
							<p class="text-gray-300 text-sm">
								{item.location}
							</p>
						</div>
					</div>
				</div>
			))}
		</div>



		<!-- CTA -->
		<div class="text-center mt-16">
			<a href="#contact" class="btn-primary text-lg">
				สนใจบริการของเรา
			</a>
		</div>
	</div>
</section>
